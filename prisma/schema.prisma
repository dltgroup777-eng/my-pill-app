generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  type        String   @default("medicine")
  dosageText  String?
  ingredients String[]
  userId      String
  createdAt   DateTime @default(now())
}

model ScanLog {
  id        String   @id @default(cuid())
  userId    String
  result    String
  createdAt DateTime @default(now())
}
